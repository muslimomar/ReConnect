<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:fitsSystemWindows="true"
    tools:context="com.devcora.android.reconnect.activities.MeditationsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="16dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="16dp">

        <android.support.v7.widget.CardView
            android:id="@+id/mantra_reminder_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="10dp"
            >

            <Button
                android:id="@+id/setup_mantra_prefs_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:lineSpacingExtra="8dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Setup Mantra Preferences"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/gotham_medium"
                tools:visibility="visible" />

            <RelativeLayout
                android:id="@+id/mantra_card_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/mantra_top_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    >

                    <TextView
                        android:id="@+id/mantra_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16dp"
                        android:drawableRight="@drawable/ic_music_18dp"
                        android:text="Mantra"
                        android:textColor="@color/meditation_color"

                        android:textSize="24sp"
                        android:drawableEnd="@drawable/ic_music_18dp" />

                    <TextView
                        android:id="@+id/mantra_time_period_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/mantra_title_tv"
                        android:layout_marginTop="8dp"
                        android:text="12 - 20"
                        android:textColor="@color/meditation_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/mantra_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/mantra_time_period_tv"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@id/mantra_icon_iv"
                        android:textColor="@color/meditation_color"
                        android:textSize="16sp"
                        tools:text="lorem ipsum dolor iset amet brend ist brend"
                        android:layout_toStartOf="@id/mantra_icon_iv"
                        android:layout_alignParentStart="true" />


                    <ImageView
                        android:id="@+id/mantra_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:paddingLeft="5dp"
                        android:src="@drawable/ic_mantra_63dp"
                        android:tint="@color/white"
                        android:layout_marginEnd="16dp"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="5dp" />


                </RelativeLayout>

                <View
                    android:id="@+id/divider_mantra"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/mantra_top_layout"
                    android:layout_marginTop="16dp"
                    android:alpha="0.1"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider_mantra"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:id="@+id/mantra_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:text="EDIT" />

                    <Button
                        android:id="@+id/mantra_preview_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text="PREVIEW"
                        android:layout_toEndOf="@id/mantra_edit_btn" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/chakra_reminder_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/mantra_reminder_card_view"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/blue"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="10dp"

            >

            <Button
                android:id="@+id/setup_chakra_prefs_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:lineSpacingExtra="8dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Setup Chakra Preferences"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_medium"
                android:textSize="18sp" />

            <RelativeLayout
                android:id="@+id/chakra_card_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:visibility="gone">

                <RelativeLayout
                    android:id="@+id/chakra_top_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/chakra_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16dp"
                        android:drawableRight="@drawable/ic_music_18dp"
                        android:text="Chakra"
                        android:textColor="@color/meditation_color"
                        android:textSize="24sp"
                        android:drawableEnd="@drawable/ic_music_18dp" />

                    <TextView
                        android:id="@+id/chakra_time_period_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/chakra_title_tv"
                        android:layout_marginTop="8dp"
                        android:text="12 - 20"
                        android:textColor="@color/meditation_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/chakra_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/chakra_time_period_tv"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@id/chakra_icon_iv"
                        android:textColor="@color/meditation_color"
                        android:textSize="16sp"
                        tools:text="I have intimate connections with others"
                        android:layout_alignParentStart="true" />


                    <ImageView
                        android:id="@+id/chakra_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_chakra_63dp"
                        android:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp" />

                </RelativeLayout>
                <View
                    android:id="@+id/divider_chakra"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/chakra_top_layout"
                    android:layout_marginTop="16dp"
                    android:alpha="0.1"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider_chakra"
                    android:orientation="horizontal"
                    >

                    <Button
                        android:id="@+id/chakra_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:text="EDIT" />

                    <Button
                        android:id="@+id/chakra_preview_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/chakra_edit_btn"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:text="PREVIEW"
                        android:layout_toEndOf="@id/chakra_edit_btn" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:id="@+id/music_reminder_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/chakra_reminder_card_view"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/purple"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            app:cardCornerRadius="10dp"
            >

            <Button
                android:id="@+id/setup_sound_prefs_btn"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@android:color/transparent"
                android:lineSpacingExtra="8dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:text="Setup Music Or Notification Preferences"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_medium"
                android:textSize="18sp"
                tools:visibility="gone"
                />

            <RelativeLayout
                android:id="@+id/sound_card_view_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="16dp"
                android:visibility="gone"
                tools:visibility="visible"
                >

                <RelativeLayout
                    android:id="@+id/sound_top_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp">

                    <TextView
                        android:id="@+id/music_title_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="16dp"
                        android:drawableRight="@drawable/ic_music_18dp"
                        android:text="Music"
                        android:textColor="@color/meditation_color"
                        android:textSize="24sp"
                        android:drawableEnd="@drawable/ic_music_18dp" />

                    <TextView
                        android:id="@+id/music_time_period_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/music_title_tv"
                        android:layout_marginTop="8dp"
                        android:text="12 - 20"
                        android:textColor="@color/meditation_color"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/music_text_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/music_time_period_tv"
                        android:layout_marginTop="8dp"
                        android:layout_toLeftOf="@id/music_icon_iv"
                        android:textColor="@color/meditation_color"
                        android:textSize="16sp"
                        tools:text="Music Name"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@id/music_icon_iv" />


                    <ImageView
                        android:id="@+id/music_icon_iv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="16dp"
                        android:src="@drawable/ic_music_63dp"
                        android:tint="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp" />


                </RelativeLayout>

                <View
                    android:id="@+id/divider_music"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/sound_top_layout"
                    android:layout_marginTop="16dp"
                    android:alpha="0.1"
                    android:background="@color/black" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/divider_music"
                    android:orientation="horizontal"

                    >

                    <Button
                        android:id="@+id/music_edit_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider_chakra"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"

                        android:text="EDIT" />

                    <Button
                        android:id="@+id/music_preview_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/divider_music"
                        android:layout_toRightOf="@id/music_edit_btn"
                        android:background="@android:color/transparent"
                        android:elevation="0dp"
                        android:text="PREVIEW" />

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </RelativeLayout>

</ScrollView>