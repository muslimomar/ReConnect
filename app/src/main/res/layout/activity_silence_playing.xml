<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/silence_playing_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.william.reconnect.activities.PlayingSilenceActivity">


    <TextView
        android:fontFamily="@font/gotham_medium"
        android:id="@+id/silence_day_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Silence Day"
        android:textColor="#099db8"
        android:textSize="41.7sp" />

    <TextView
        android:id="@+id/silence_sign_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:gravity="center_horizontal"
        android:letterSpacing="0.01"
        android:textColor="#2f2a30"
        android:textSize="24.7sp"
        tools:text="@string/ipractis" />


    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Counter"
        android:textColor="#099db8"
        android:textSize="20sp" />

    <TextView
        android:layout_gravity="center"
        android:id="@+id/countUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:textSize="40sp"


        />

    <Button
        android:id="@+id/btn_stop_silence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_rect"
        android:text="stop"
        android:fontFamily="@font/gotham_medium"
        android:textColor="@color/white"
        android:textSize="20sp"

        />

    <Button
        android:id="@+id/btn_start_silence"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:fontFamily="@font/gotham_medium"
        android:layout_marginTop="20dp"
        android:background="@drawable/silence_btn_rect"
        android:text="start"
        android:textColor="@color/black"
        android:textSize="20sp"


        />


</LinearLayout>
